<p id="notice"><%= notice %></p>

<style>
html {
    height: 100%;
}

body {
    margin: 5em auto;
    background: rgb(2,0,36);
    background: linear-gradient(0deg, rgba(2,0,36,0.9150035014005602) 14%, rgba(22,63,98,1) 50%, rgba(9,101,121,1) 99%, rgba(0,212,255,1) 100%);
    color: white;
}

td {
    padding:0 2em;
}
</style>

<h1>Posts</h1>

<table style="color: white;">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><%= post.category_id %></td>
        <td><span style="color: white;"><%= link_to 'Show', post %></span></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
